@model SV20T1020078.DomainModels.Category
@{
    ViewBag.Title = "Xóa loại";
}

<div class="box box-primary ">
    <div class="box-body">
        <form  action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <p class="form-control-static">@Model.CategoryName</p>
            </div>
            <div class="form-group" style="margin-left:10px">
                <label for="pwd">Mô tả:</label>
                <p class="form-control-static">@Model.Description</p>
            </div>
            <div class=" form-group" style="padding-top:20px">
                @if (!SV20T1020078.BusinessLayers.CommonDataService.IsUsedCategory(Model.CategoryID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy-o"></i> Xóa dữ liệu
                    </button>
                }
                <a href="~/Category" class="btn btn-default" style="margin-left:8px">Quay lại</a>
            </div>
        </form>
        
    </div>
</div>