
@model SV20T1020078.DomainModels.Category
@{

}

<div class="box box-primary ">
    <div class="box-body">
        <form class="form-inline" action="~/Category/Save" method="post" >
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" autofocus value="@Model.CategoryName">
            </div>
            <div class="form-group" style="margin-left:10px">
                <label for="pwd">Mô tả:</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
       
    </div>
</div>