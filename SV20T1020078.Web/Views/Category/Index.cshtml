@model SV20T1020078.Web.Models.CategorySearchResult
@{
    // Sử dụng layout khác
    // Layout = "_Layout2";
    // nếu ko có layout thì sử dụng layout mặc định
    ViewBag.Title = "Quản lý loại hàng";
    // Layout = null; // Khong dùng đến layout
}

<div class="box box-primary">
    <div class="box-body">

        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Category">
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên loại hàng cần tìm" value="@Model.SearchValue">

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin: 10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> loại hàng trong số <strong>@Model.PageCount</strong> trang
            </p>
            <div class="table-responsive">
                <table class=" table table-bordered table-hover table-striped">
                    <!--Header-->
                    <thead>
                        <tr class="bg-primary">
                            <th>Tên loại hàng </th>
                            <th>Mô tả</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>

                    <!--Body-->
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td class="text-right">
                                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (Model.Page == p)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Category?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                </ul>
            </div>
        </div>

    </div>
</div>
