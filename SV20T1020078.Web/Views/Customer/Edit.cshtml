@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="#">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control" name="CustomerName">
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName">
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="Email">
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address">
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                <select class="form-control" name="Province">
                    <option>-- Chọn tỉnh/thành --</option>
                    <option>Thừa Thiên Huế</option>
                    <option>Quản trị</option>

                </select>
            </div>

            <div class="form-group">
                <label>Trạng thái :</label>
                <select class="form-control" name="IsLocked">
                    <option value="false">Tài khoản không bị khóa</option>
                    <option value="true">Tài khoản bị khóa</option>

                </select>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
