
@model SV20T1020078.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-body">
        <!--enctype="multipart/form-data" khi nào có file thì dùng thuoovj tính này trong form-->
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/SavePhoto">
            <input type="hidden" name="@nameof(Model.PhotoID)" value="@Model.PhotoID" />
            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />
            <p>@Model.ProductID</p>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@nameof(Model.Photo)" />
                    <img src="~/images/products/@Model.Photo" class="img img-bordered" style="width:150px" id="Photo" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.DisplayOrder)" value="@Model.DisplayOrder" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <input type="checkbox" name="@nameof(Model.IsHidden)" value="false" /> Không hiển thị ảnh
                    </div>
                </div>
                
            </div>



            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>