@model SV20T1020078.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}

<div class="box box-primary ">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class=" form-group" style="padding-top:20px">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-floppy-o"></i> Xóa dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default" style="margin-left:8px">Quay lại</a>
            </div>
        </form>
    </div>
</div>