@{
    ViewBag.Title = "Xóa người giao hàng";
}

<div class="box box-primary ">
    <div class="box-body">
        <form class="form-inline" action="~/">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <p class="form-control-static">Đạt Võ</p>
            </div>
            <div class="form-group" style="margin-left:10px">
                <label for="pwd">Điện thoại:</label>
                <p class="form-control-static">0123456789</p>
            </div>

        </form>
        <div class=" form-group" style="padding-top:20px">
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-floppy-o"></i> Xóa dữ liệu
            </button>
            <a href="~/Shipper" class="btn btn-default" style="margin-left:8px">Quay lại</a>
        </div>
    </div>
</div>