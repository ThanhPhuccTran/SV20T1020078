@model SV20T1020078.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" autofocus >
                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
               @*  <select class="form-control" name="Province">
                    <option>-- Chọn tỉnh/thành --</option>
                    @foreach (var item in SV20T1020078.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                    }

                </select> *@
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Pronvinces(), new { @class = "form-control" })
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
            </div>

          

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
        </form>
    </div>
</div>
